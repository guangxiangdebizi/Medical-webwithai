# 基础配置
BACKEND_PORT=8003

# 模型档位设置（逗号分隔）
LLM_PROFILES=DEEPSEEK,ZHIPU,OPENAI,SASAGENT,SASAGENT2
LLM_DEFAULT=OPENAI

# OpenAI 兼容（默认档位）
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1/
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT=60

# DeepSeek 档位
LLM_DEEPSEEK_LABEL=DeepSeek Chat
LLM_DEEPSEEK_API_KEY=
LLM_DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
LLM_DEEPSEEK_MODEL=deepseek-chat
LLM_DEEPSEEK_TEMPERATURE=0.2
LLM_DEEPSEEK_TIMEOUT=60

# 智谱 GLM 档位
LLM_ZHIPU_LABEL=Zhipu GLM-4.5v
LLM_ZHIPU_API_KEY=
LLM_ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4
LLM_ZHIPU_MODEL=glm-4.5v
LLM_ZHIPU_TEMPERATURE=0.2
LLM_ZHIPU_TIMEOUT=60

# SAS Agent（复用 OpenAI 档位）
LLM_SASAGENT_LABEL=SAS Expert
LLM_SASAGENT_API_KEY=${OPENAI_API_KEY}
LLM_SASAGENT_BASE_URL=${OPENAI_BASE_URL}
LLM_SASAGENT_MODEL=${OPENAI_MODEL}
LLM_SASAGENT_TEMPERATURE=${OPENAI_TEMPERATURE}
LLM_SASAGENT_TIMEOUT=${OPENAI_TIMEOUT}

# SAS Agent N2（复用智谱档位）
LLM_SASAGENT2_LABEL=SAS Agent N2
LLM_SASAGENT2_API_KEY=${LLM_ZHIPU_API_KEY}
LLM_SASAGENT2_BASE_URL=${LLM_ZHIPU_BASE_URL}
LLM_SASAGENT2_MODEL=glm-4.5
LLM_SASAGENT2_TEMPERATURE=${LLM_ZHIPU_TEMPERATURE}
LLM_SASAGENT2_TIMEOUT=${LLM_ZHIPU_TIMEOUT}

# 历史记录与上传限制
HISTORY_IMAGE_MAX_FILE_BYTES=2097152  # 2MB
HISTORY_IMAGES_MAX_TOTAL=6
HISTORY_IMAGES_MAX_PER_RECORD=3

# 数据库（Medical 工具依赖）
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=medical_db

# 可选：公共访问地址（用于生成分享链接）
PUBLIC_BASE_URL=

